{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make-clean",
            "type": "shell",
            "command": "./make.clean.sh",
            "group": "build"
        },
        {
            "label": "make-debug",
            "type": "shell",
            "command": "./make.debug.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make-release",
            "type": "shell",
            "command": "./make.release.sh",
            "group": "build"
        }
    ]
}